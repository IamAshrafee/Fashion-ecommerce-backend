# =========================================
# THE FASHION ENGINE - Environment Configuration
# =========================================
# Instructions: Copy this file to .env and update the values

# -----------------------------------------
# Application
# -----------------------------------------
NODE_ENV=development
PORT=3000
API_PREFIX=api

# -----------------------------------------
# CORS Configuration
# -----------------------------------------
CLIENT_URL=http://localhost:5173

# -----------------------------------------
# MongoDB Configuration
# -----------------------------------------
MONGO_URI=mongodb://admin:password123@localhost:27017/fashion_engine?authSource=admin
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
MONGO_DATABASE=fashion_engine
MONGO_PORT=27017

# -----------------------------------------
# MinIO S3-Compatible Storage
# -----------------------------------------
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_DEFAULT_BUCKET=product-images
MINIO_USE_SSL=false
MINIO_CONSOLE_PORT=9001

# -----------------------------------------
# JWT Authentication
# -----------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# -----------------------------------------
# Security & Rate Limiting
# -----------------------------------------
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# -----------------------------------------
# Swagger Documentation
# -----------------------------------------
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs
SWAGGER_TITLE=The Fashion Engine API
SWAGGER_DESCRIPTION=Universal E-commerce Backend for Fashion & Apparel
SWAGGER_VERSION=1.0

# -----------------------------------------
# White-Label Store Configuration
# (These will be moved to database in Phase 2)
# -----------------------------------------
STORE_NAME=Fashion Store
STORE_CURRENCY=BDT
STORE_SHIPPING_CHARGE=60
